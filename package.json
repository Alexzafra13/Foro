{
 "name": "foro",
 "version": "1.0.0",
 "main": "index.js",
 "scripts": {
  "dev": "node --env-file=.env -r ts-node/register -r tsconfig-paths/register src/app.ts",
  "dev:old": "tsnd --respawn --clear --require tsconfig-paths/register src/app.ts",
  "db:seed": "ts-node --project tsconfig.json -r tsconfig-paths/register ./prisma/seed.ts",
  "db:seed:prod": "node dist/prisma/seed.js",
  "db:migrate": "npx prisma migrate deploy",
  "db:setup": "npm run db:migrate && npm run db:seed:prod",
  "build": "rimraf ./dist && tsc && tsc-alias",
  "build:full": "rimraf ./dist && tsc && tsc-alias && npm run build:seed",
  "build:seed": "npx tsc prisma/seed.ts --outDir dist/ --moduleResolution node --esModuleInterop --target ES2020",
  "start": "node --env-file=.env dist/src/app.js",
  "start:docker": "node dist/src/app.js",
  "start:local": "node --env-file=.env dist/src/app.js",
  "start:build": "npm run build:full && npm start",
  "postbuild": "npm run build:seed",
  "test": "jest",
  "test:watch": "jest --watch",
  "test:coverage": "jest --coverage",
  "test:unit": "jest tests/unit",
  "test:integration": "jest tests/integration",
  "test:e2e": "jest tests/e2e --runInBand",
  "test:clear": "jest --clearCache"
 },
 "keywords": [],
 "author": "",
 "license": "ISC",
 "description": "",
 "devDependencies": {
  "@faker-js/faker": "^9.3.0",
  "@types/bcryptjs": "^2.4.6",
  "@types/cors": "^2.8.19",
  "@types/express": "^5.0.3",
  "@types/jest": "^29.5.14",
  "@types/jsonwebtoken": "^9.0.10",
  "@types/node": "^24.1.0",
  "@types/nodemailer": "^6.4.17",
  "@types/supertest": "^6.0.3",
  "jest": "^29.7.0",
  "jest-mock-extended": "^4.0.0",
  "prisma": "^6.12.0",
  "rimraf": "^6.0.1",
  "supertest": "^7.0.0",
  "ts-jest": "^29.2.6",
  "ts-node": "^10.9.2",
  "ts-node-dev": "^2.0.0",
  "tsc-alias": "^1.8.10",
  "tsx": "^4.20.3",
  "typescript": "^5.8.3"
 },
 "dependencies": {
  "@prisma/client": "^6.12.0",
  "@types/multer": "^2.0.0",
  "bcryptjs": "^3.0.2",
  "cors": "^2.8.5",
  "express": "^5.1.0",
  "jsonwebtoken": "^9.0.2",
  "multer": "^2.0.2",
  "nodemailer": "^7.0.5",
  "sharp": "^0.34.3",
  "tsconfig-paths": "^4.2.0",
  "uuid": "^11.1.0"
 }
}
